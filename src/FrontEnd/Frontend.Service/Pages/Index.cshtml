@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" style="margin-bottom: 50px">
	<h1 class="display-4">Welcome</h1>
	<p>Showing the list of containers in the warehouse</p>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Client Id</th>
			<th>Date Booked</th>
			<th>Date In</th>
			<th>Date Expected</th>
			<th>Date Shipped</th>
			<th>Type</th>
			<th>Notes</th>
		</tr>
	</thead>
	@foreach (var item in Model.Data)
	{
		<tr>
			<td>@item.ClientId</td>
			<td>@Model.FormatDate(item.DateBooked)</td>
			<td>@Model.FormatDate(item.DateIn)</td>
			<td>@Model.FormatDate(item.DateExpectedToShip)</td>
			<td>@Model.FormatDate(item.DateShipped)</td>
			<td>@item.Type</td>
			<td>@item.Notes</td>
		</tr>
	}
</table>

<div>
	<ul class="pagination">
		@if (Model.ShowPrevious)
		{
			<li class="page-item">
				<a asp-page="/index" asp-route-currentpage="@(Model.CurrentPage - 1)" class="page-link">Previous</a>
			</li>
		}
		@if (Model.ShowNext)
		{
			<li class="page-item">
				<a asp-page="/index" asp-route-currentpage="@(Model.CurrentPage + 1)" class="page-link">Next</a>
			</li>
		}
	</ul>
</div>